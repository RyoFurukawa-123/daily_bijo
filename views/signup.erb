<h1>新規登録</h1>
<div class="col-sm-6 col-lg-6 offset-3 p-5">
    <form action="/signup" method="post">
        <div class="form-group">
            <label for ="name">名前<span class="text-danger">必須</span></label>
            <input type="text" class="form-control" name="name" id="name" required>
        </div> 
        <div class="form-group">
            <label for ="email">email<span class="text-danger">必須</span></label>
            <input type="email" class="form-control" name="email" id="email" required>
        </div> 
        <div class="form-group">
            <label for ="password">パスワード<span class="text-danger">必須</span></label>
            <input type="password" class="form-control" name="password" id="password" required>
        </div> 
        <div class="form-group">
            <label for ="re_password">パスワード再確認<span class="text-danger">必須</span></label>
            <input type="password" class="form-control" name="confirmation" id="re_password" required>
        </div> 
        <button class="signup-btn button" type="button" onclick="location.href='/login'">登録</button>
        <%# <button type="submit" class="btn btn-primary">新規登録</button> %>
    </form>
</div>